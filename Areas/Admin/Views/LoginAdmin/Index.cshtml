@model CNPM.Models.account

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>BEMI | Đăng nhập</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/BEMI.ico">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
</head>

<body class="">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <img class="img-fluid" style="max-width: 200px;" src="~/Content/img/BEMI.png" alt="">
            </div>
        </div>
        <div class="row py-5">
            <div class="col-md-12">
                <div class=" col-md-4 m-auto p-4 bg-light form-account">
                    <h1 class="text-center mb-5">ĐĂNG NHẬP</h1>
                    @if (ViewBag.errorMsg != null)
                    {
                        <div class="mb-4" style="color:#ff0000"> Sai tên đăng nhập hoặc mật khẩu. </div>

                    }
                    @using (Html.BeginForm("Autherize", "LoginAdmin", FormMethod.Post))
                    {
                        <!-- Email input -->
                        <div class="mb-4">
                            <label class="form-label" for="mail-login ">Email</label>
                            <div type="text" id="mail-login" class="form-control" placeholder="Nhập địa chỉ email">
                                <input name="mail" type="text" id="mail-login" class="form-control">
                            </div>
                        </div>

                        <!-- Password input -->
                        <div class="mb-4 ">
                            <label class="form-label" for="pass-login">Password</label>
                            <div name="password" type="password" id="pass-login" class="form-control" placeholder="Nhập mật khẩu">
                                <input name="password" type="password" id="pass-login" class="form-control">
                            </div>
                        </div>

                        <!-- 2 column grid layout for inline styling -->
                        <div class="row mb-4 ">
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input name="remember" class="form-check-input" type="checkbox" value="checked" id="check-remember" checked>
                                    <label class="form-check-label" for="check-remember">Remember me</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Simple link -->
                                <a class="text-decoration-none" href="forgot.html">Quên mật khẩu?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" name="name" value="Login" class="btn btn-success mb-5">ĐĂNG NHẬP</button>
                    }

                    <!-- Register buttons -->
                    <div class="text-center">
                        <p>Chưa có tài khoản?<a class="text-decoration-none" href="/register"> Đăng kí</a></p>
                        <p>hoặc đăng nhập với:</p>
                        <button type="button" class="btn btn-success mx-1">
                            <i class="fab fa-facebook-f "></i>
                        </button>
                        <button type="button" class="btn btn-success mx-1">
                            <i class="fab fa-google "></i>
                        </button>
                        <button type="button" class="btn btn-success mx-1">
                            <i class="fab fa-github "></i>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js " integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ " crossorigin="anonymous "></script>
    <script src="~/Scripts/js/main.js"></script>
    <!-- / Script -->
</body>

</html>
