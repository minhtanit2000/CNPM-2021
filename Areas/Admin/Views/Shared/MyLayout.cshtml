    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="600">

    <!-- Meta -->
    <meta name="description" content="Premium Quality and Responsive UI for Dashboard.">
    <meta name="author" content="ThemePixels">

    <title>@ViewData["Title"] -Admin</title>

    <!-- vendor css -->
    <link href="~/Content/AdminAssets/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/lib/Ionicons/css/ionicons.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/lib/chartist/css/chartist.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/lib/rickshaw/css/rickshaw.min.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/lib/bootstrap-tagsinput/css/bootstrap-tagsinput.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


    <!-- Slim CSS -->
    <link rel="stylesheet" href="~/Content/AdminAssets/css/slim.css">
    <link href="~/Content/AdminAssets/css/slim.css" rel="stylesheet" />

</head>
<body>
    <div class="slim-header">
        <div class="container">
            <div class="slim-header-left">
                <h2 class="slim-logo"><a href="#">BEMI</a></h2>

            </div><!-- slim-header-left -->
            <div class="slim-header-right">

                
                <div class="dropdown dropdown-c">
                    <a href="#" class="logged-user" data-toggle="dropdown">
                        <img src="http://via.placeholder.com/500x500" alt="">
                        <span>Admin</span>
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <nav class="nav">
                            <a href="@Url.Action("LogOut","LoginAdmin")" class="nav-link"><i class="icon ion-forward"></i> Sign Out</a>
                        </nav>
                    </div><!-- dropdown-menu -->
                </div><!-- dropdown -->
            </div><!-- header-right -->
        </div><!-- container -->
    </div><!-- slim-header -->

    <div class="slim-navbar">
        <div class="container">
            <ul class="nav">
                <li class="nav-item with-sub active">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icon ion-ios-home-outline"></i>
                        <span>Trang chủ</span>
                    </a>
                </li>

                <li class="nav-item with-sub">
                    <a class="nav-link" href="#" data-toggle="dropdown">
                        <i class="icon ion-ios-filing-outline"></i>
                        <span>Quản lí sản phẩm</span>
                    </a>
                    <div class="sub-item">
                        <ul>
                            <li><a href="/Admin/Products">Quản lí sản phẩm</a></li>
                            <li><a href="/Admin/Products/Create">Thêm sản phẩm</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item with-sub">
                    <a class="nav-link" href="#" data-toggle="dropdown">
                        <i class="icon ion-ios-analytics-outline"></i>
                        <span>Quản lí tài khoản</span>
                    </a>
                    <div class="sub-item">
                        <ul>
                            <li><a href="/Admin/Accounts">Quản lí tài khoản</a></li>
                            <li><a href="/Admin/Accounts/Create">Thêm tài khoản</a></li>
                        </ul>
                    </div>
                </li>               
            </ul>
        </div><!-- container -->
    </div><!-- slim-navbar -->

    <div class="slim-mainpanel">
        <div class="container">
            @RenderBody()

        </div><!-- container -->
    </div><!-- slim-mainpanel -->

    <div class="slim-footer">
        <div class="container">
            <p>Copyright 2018 &copy; All Rights Reserved. Slim Dashboard Template</p>
            <p>Designed by: <a href="">ThemePixels</a></p>
        </div><!-- container -->
    </div><!-- slim-footer -->

    <script src="~/Content/AdminAssets/lib/jquery/js/jquery.js"></script>
    <script src="~/Content/AdminAssets/lib/popper.js/js/popper.js"></script>
    <script src="~/Content/AdminAssets/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/AdminAssets/lib/jquery.cookie/js/jquery.cookie.js"></script>
    <script src="~/Content/AdminAssets/lib/chartist/js/chartist.js"></script>
    <script src="~/Content/AdminAssets/lib/d3/js/d3.js"></script>
    <script src="~/Content/AdminAssets/lib/rickshaw/js/rickshaw.min.js"></script>
    <script src="~/Content/AdminAssets/lib/summernote/js/summernote-bs4.min.js"></script>
    <script src="~/Content/AdminAssets/lib/jquery.sparkline.bower/js/jquery.sparkline.min.js"></script>
    <script src="~/Content/AdminAssets/lib/medium-editor/js/medium-editor.js"></script>
    <script src="~/Content/AdminAssets/js/ResizeSensor.js"></script>
    <script src="~/Content/AdminAssets/js/dashboard.js"></script>
    <script src="~/Content/AdminAssets/js/slim.js"></script>
    <script src="~/Content/AdminAssets/lib/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>



</body>
</html>
