<!-- Contact -->
<div class="container py-5">
    <div class="row py-5">
        <form class="col-md-9 m-auto" method="post" role="form">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label for="inputname">Họ & Tên</label>
                    <input type="text" class="form-control mt-1" id="name" name="name" placeholder="Nhập họ tên của bạn">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="inputemail">Email</label>
                    <input type="email" class="form-control mt-1" id="email" name="email" placeholder="Nhập địa chỉ email của bạn">
                </div>
            </div>
            <div class="mb-3">
                <label for="inputsubject">Chủ đề</label>
                <input type="text" class="form-control mt-1" id="subject" name="subject" placeholder="Nhập chủ đề">
            </div>
            <div class="mb-3">
                <label for="inputmessage">Nội dung</label>
                <textarea class="form-control mt-1" id="message" name="message" placeholder="Nhập lời nhắn của bạn" rows="8"></textarea>
            </div>
            <div class="row">
                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Liên hệ ngay</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- End Contact -->
